<?xml version="1.0"?>

<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_0.dtd">
<faces-config>
    <application>
        <message-bundle>org.sakaiproject.tool.messageforums.bundle.Messages</message-bundle>
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>de</supported-locale>
            <supported-locale>fr</supported-locale>
            <supported-locale>es</supported-locale>
        </locale-config>
    </application>

    <!-- =================== Custom JSF Tags ============== -->

    <!-- hide division button bar -->
    <component>
	  <component-type>BarLink</component-type>
      <component-class>org.sakaiproject.tool.messageforums.jsf.BarLinkComponent</component-class>
    </component>
	<component>
      <component-type>HideDivision</component-type>
      <component-class>org.sakaiproject.tool.messageforums.jsf.HideDivisionComponent</component-class>
    </component>
    
	<render-kit>
    <renderer>
      <component-family>HideDivision</component-family> 
      <renderer-type>org.sakaiproject.HideDivision</renderer-type>
      <renderer-class>org.sakaiproject.tool.messageforums.jsf.HideDivisionRenderer</renderer-class>
    </renderer>
    <renderer>
      <component-family>javax.faces.Command</component-family>
      <renderer-type>org.sakaiproject.tool.messageforums.jsf.BarLinkRenderer</renderer-type>
      <renderer-class>org.sakaiproject.tool.messageforums.jsf.BarLinkRenderer</renderer-class>
    </renderer>    
    </render-kit>
    <!-- =================== Navigation ============== -->
    <navigation-rule>
        <from-view-id>/messageforums/*</from-view-id>
        <navigation-case>
            <from-outcome>main</from-outcome>
            <to-view-id>/messageforums/main.jsp</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>compose</from-outcome>
            <to-view-id>/messageforums/compose.jsp</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>test</from-outcome>
            <to-view-id>/messageforums/test.jsp</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>showallmessages</from-outcome>
            <to-view-id>/messageforums/debug-showallmessages.jsp</to-view-id>
            <redirect/>
        </navigation-case>
        
        <!-- htripath -->
        <navigation-case>
            <from-outcome>pvtMsgOrganize</from-outcome>
            <to-view-id>/messageforums/pvtMsgOrganize.jsp</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>pvtMsgStatistics</from-outcome>
            <to-view-id>/messageforums/pvtMsgStatistics.jsp</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>pvtMsgSettings</from-outcome>
            <to-view-id>/messageforums/pvtMsgSettings.jsp</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>pvtMsgReceived</from-outcome>
            <to-view-id>/messageforums/pvtMsgReceived.jsp</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>pvtMsgSent</from-outcome>
            <to-view-id>/messageforums/pvtMsgSent.jsp</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>pvtMsgDelete</from-outcome>
            <to-view-id>/messageforums/pvtMsgDelete.jsp</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>pvtMsgDrafts</from-outcome>
            <to-view-id>/messageforums/pvtMsgDrafts.jsp</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>pvtMsgCase</from-outcome>
            <to-view-id>/messageforums/pvtMsgCase.jsp</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>pvtMsgGrpCorres</from-outcome>
            <to-view-id>/messageforums/pvtMsgGrpCorres.jsp</to-view-id>
            <redirect/>
        </navigation-case>
        <!--htripath -->                                        
    </navigation-rule>
    
    <!-- =================== Tool Beans ============== -->
    <managed-bean>
        <description>Message Forums Tool</description>
        <managed-bean-name>MessageForumsTool</managed-bean-name>
        <managed-bean-class>org.sakaiproject.tool.messageforums.MessageForumsTool</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
        <managed-property>
            <description>Message Forums Forum/Topic Manager</description>
            <property-name>messageForumsForumManager</property-name>
            <value>#{Components["org.sakaiproject.api.app.messageforums.MessageForumsForumManager"]}</value>
        </managed-property>
        <managed-property>
            <description>Message Forums Message Manager</description>
            <property-name>messageForumsMessageManager</property-name>
            <value>#{Components["org.sakaiproject.api.app.messageforums.MessageForumsMessageManager"]}</value>
        </managed-property>
    </managed-bean>
</faces-config>
