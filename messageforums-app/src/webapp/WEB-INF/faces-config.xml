<?xml version="1.0"?>

<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_0.dtd">
<faces-config>
    <application>
        <message-bundle>org.sakaiproject.tool.messageforums.bundle.Messages</message-bundle>
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>de</supported-locale>
            <supported-locale>fr</supported-locale>
            <supported-locale>es</supported-locale>
        </locale-config>
    </application>

    <!-- =================== Custom JSF Tags ============== -->
    <!-- 
    <component>
      <component-type>SyllabusShowArea</component-type>
      <component-class>org.sakaiproject.jsf.syllabus.SyllabusShowAreaComponent</component-class>
    </component>

    <render-kit>
      <renderer>
        <component-family>SakaiSyllabusIframe</component-family>
        <renderer-type>SakaiSyllabusIframeRender</renderer-type>
        <renderer-class>org.sakaiproject.jsf.syllabus.SyllabusIframeRender</renderer-class>
      </renderer>
    </render-kit>
    -->

    <!-- hide division button bar -->
    <renderer>
      <component-family>javax.faces.Output</component-family>
      <renderer-type>org.sakaiproject.HideDivisionButtonBar</renderer-type>
      <renderer-class>org.sakaiproject.tool.messageforums.jsf.HideDivisionButtonBarRenderer</renderer-class>
    </renderer>
    <renderer>
      <component-family>javax.faces.Output</component-family>
      <renderer-type>org.sakaiproject.HideDivisionContent</renderer-type>
      <renderer-class>org.sakaiproject.tool.messageforums.jsf.HideDivisionContentRenderer</renderer-class>
    </renderer>
    <!-- =================== Navigation ============== -->
    <navigation-rule>
        <from-view-id>/messageforums/*</from-view-id>
        <navigation-case>
            <from-outcome>main</from-outcome>
            <to-view-id>/messageforums/main.jsp</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>compose</from-outcome>
            <to-view-id>/messageforums/compose.jsp</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>test</from-outcome>
            <to-view-id>/messageforums/test.jsp</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>showallmessages</from-outcome>
            <to-view-id>/messageforums/debug-showallmessages.jsp</to-view-id>
            <redirect/>
        </navigation-case>
        
    </navigation-rule>
    
    <!-- =================== Tool Beans ============== -->
    <managed-bean>
        <description>Message Forums Tool</description>
        <managed-bean-name>MessageForumsTool</managed-bean-name>
        <managed-bean-class>org.sakaiproject.tool.messageforums.MessageForumsTool</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <description>Message Forums Manager</description>
            <property-name>messageForumsManager</property-name>
            <value>#{Components["org.sakaiproject.api.app.messageforums.MessageForumsManager"]}</value>
        </managed-property>
    </managed-bean>
</faces-config>
