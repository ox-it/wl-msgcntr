<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
    <bean id="org.sakaiproject.springframework.orm.hibernate.impl.AdditionalHibernateMappingsImpl.messageforum" 
          class="org.sakaiproject.springframework.orm.hibernate.impl.AdditionalHibernateMappingsImpl">
        <property name="mappingResources">
            <list>
                <value>org/sakaiproject/component/app/messageforums/dao/hibernate/ActorPermissions.hbm.xml</value>
                <value>org/sakaiproject/component/app/messageforums/dao/hibernate/MessageForumsUserImpl.hbm.xml</value>
                <value>org/sakaiproject/component/app/messageforums/dao/hibernate/ControlPermissions.hbm.xml</value>
                <value>org/sakaiproject/component/app/messageforums/dao/hibernate/DateRestrictions.hbm.xml</value>
                <value>org/sakaiproject/component/app/messageforums/dao/hibernate/MessagePermissions.hbm.xml</value>
                <value>org/sakaiproject/component/app/messageforums/dao/hibernate/Attachment.hbm.xml</value>
                <value>org/sakaiproject/component/app/messageforums/dao/hibernate/UnreadStatus.hbm.xml</value>
                <value>org/sakaiproject/component/app/messageforums/dao/hibernate/Area.hbm.xml</value>
                <value>org/sakaiproject/component/app/messageforums/dao/hibernate/Topic.hbm.xml</value>
                <value>org/sakaiproject/component/app/messageforums/dao/hibernate/MessageImpl.hbm.xml</value>
                <value>org/sakaiproject/component/app/messageforums/dao/hibernate/OpenForum.hbm.xml</value>
                <value>org/sakaiproject/component/app/messageforums/dao/hibernate/PrivateForum.hbm.xml</value>
                <value>org/sakaiproject/component/app/messageforums/dao/hibernate/Label.hbm.xml</value>
            </list>
        </property>
    </bean>
    
    <bean id="org.sakaiproject.api.app.messageforums.MessageForumsTypeManager" 
        class="org.sakaiproject.component.app.messageforums.MessageForumsTypeManagerImpl">
        <property name="typeManager">
            <ref bean="org.sakaiproject.api.common.type.TypeManager"/>
        </property>          
    </bean>
     
    <bean id="org.sakaiproject.api.app.messageforums.DummyDataHelperApi" class="org.sakaiproject.component.app.messageforums.DummyDataHelper">
        <property name="typeMgr">
            <ref bean="org.sakaiproject.api.app.messageforums.MessageForumsTypeManager"/>
        </property>
    </bean>
 
    <bean id="org.sakaiproject.component.app.messageforums.MessageForumsAreaManager" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
        <property name="transactionManager">
            <ref bean="org.sakaiproject.springframework.orm.hibernate.GlobalTransactionManager"/>
        </property>
        <property name="target">
            <bean class="org.sakaiproject.component.app.messageforums.MessageForumsAreaManagerImpl" singleton="true" init-method="init">
                <property name="sessionFactory">
                    <ref bean="org.sakaiproject.springframework.orm.hibernate.GlobalSessionFactory"/>
                </property>
            </bean>            
        </property>
         <property name="transactionAttributes">
            <props>
                <prop key="*">PROPAGATION_REQUIRED</prop>
            </props>
        </property> 
    </bean>
    
    <bean id="org.sakaiproject.component.app.messageforums.MessageForumsMessageManager" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
        <property name="transactionManager">
            <ref bean="org.sakaiproject.springframework.orm.hibernate.GlobalTransactionManager"/>
        </property>
        <property name="target">
            <bean class="org.sakaiproject.component.app.messageforums.MessageForumsMessageManagerImpl" singleton="true" init-method="init">
                <property name="sessionFactory">
                    <ref bean="org.sakaiproject.springframework.orm.hibernate.GlobalSessionFactory"/>
                </property>
            </bean>            
        </property>
         <property name="transactionAttributes">
            <props>
                <prop key="*">PROPAGATION_REQUIRED</prop>
            </props>
        </property> 
    </bean>
    
    <bean id="org.sakaiproject.api.app.messageforums.PrivateMessageManager" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
        <property name="transactionManager">
            <ref bean="org.sakaiproject.springframework.orm.hibernate.GlobalTransactionManager"/>
        </property>
        <property name="target">
            <bean class="org.sakaiproject.component.app.messageforums.PrivateMessageManagerImpl" singleton="true" init-method="init">
                <property name="sessionFactory">
                    <ref bean="org.sakaiproject.springframework.orm.hibernate.GlobalSessionFactory"/>
                </property>
                <property name="helper">
                    <ref bean="org.sakaiproject.api.app.messageforums.DummyDataHelperApi"/>
                </property>
                <property name="areaManager">
                    <ref bean="org.sakaiproject.component.app.messageforums.MessageForumsAreaManager"/>
                </property>
                <property name="messageManager">
                    <ref bean="org.sakaiproject.component.app.messageforums.MessageForumsMessageManager"/>
                </property>
            </bean>           
        </property>
         <property name="transactionAttributes">
            <props>
                <prop key="*">PROPAGATION_REQUIRED</prop>
            </props>
        </property> 
    </bean>
</beans>
