<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
    PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>

  <class 
      name="org.sakaiproject.component.app.messageforums.dao.hibernate.ActorPermissions" 
      table="MFR_ACTOR_PERSMISSIONS_T" 
      optimistic-lock="version">

    <id name="id">
      <column name="ID" not-null="true" length="19" />
      <generator class="native">
        <param name="sequence">MFR_ACTOR_PERSMISSIONS_S</param>
      </generator>
    </id>

	<!--  Version number used for optimistic locking -->
    <version name="version" column="VERSION" />

    <!-- Actor Permissions fields -->
    <set name="contributors" lazy="true" sort="natural"
         order-by="uuid asc" cascade="all-delete-orphan">
        <key column="surrogateKey"/>                        
        <one-to-many class="org.sakaiproject.component.app.messageforums.dao.hibernate.MessageForumsUserImpl"/>            
    </set>  
    <set name="accessors" lazy="true" sort="natural"
         order-by="uuid asc" cascade="all-delete-orphan">
        <key column="surrogateKey"/>                        
        <one-to-many class="org.sakaiproject.component.app.messageforums.dao.hibernate.MessageForumsUserImpl"/>            
    </set>  
    <set name="moderators" lazy="true" sort="natural"
         order-by="uuid asc" cascade="all-delete-orphan">
        <key column="surrogateKey"/>                        
        <one-to-many class="org.sakaiproject.component.app.messageforums.dao.hibernate.MessageForumsUserImpl"/>            
    </set>  

  </class>

</hibernate-mapping>
