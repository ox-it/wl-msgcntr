<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
    PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>

  <class 
      name="org.sakaiproject.component.app.messageforums.dao.hibernate.MessagePermissions"
      table="MFR_MESSAGE_PERSMISSIONS_T"
      optimistic-lock="version">

    <id name="id">
      <column name="ID" not-null="true" length="19" />
      <generator class="native">
        <param name="sequence">MFR_MESSAGE_PERSMISSIONS_S</param>
      </generator>
    </id>

	<!--  Version number used for optimistic locking -->
    <version name="version" column="VERSION" />
    
    <!-- Message Permissions fields -->
    <property name="role">
      <column name="ROLE" length="255" not-null="true" />
    </property>
    <property name="doNew">
      <column name="DO_NEW" not-null="true" />
    </property>
    <property name="read">
      <column name="READ" not-null="true" />
    </property>
    <property name="reviseAny">
      <column name="REVISE_ANY" not-null="true" />
    </property>
    <property name="reviseOwn">
      <column name="REVISE_OWN" not-null="true" />
    </property>
    <property name="deleteAny">
      <column name="DELETE_ANY" not-null="true" />
    </property>
    <property name="deleteOwn">
      <column name="DELETE_OWN" not-null="true" />
    </property>
    <property name="readDrafts">
      <column name="READ_DRAFTS" not-null="true" />
    </property>
  </class>

</hibernate-mapping>
