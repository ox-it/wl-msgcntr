<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
    PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>

  <class name="org.sakaiproject.component.app.messageforums.dao.hibernate.UnreadStatus"
    table="MFR_UNREAD_STATUS_T">

    <!-- UnreadStatus fields -->
    <many-to-one name="topic" column="TOPIC"
      class="org.sakaiproject.component.app.messageforums.dao.hibernate.Topic"
      not-null="false" cascade="none" />
    <many-to-one name="message" column="MESSAGE"
      class="org.sakaiproject.component.app.messageforums.dao.hibernate.Message"
      not-null="false" cascade="none" />
    <property name="user">
      <column name="USER" length="255" not-null="true" />
    </property>
    <property name="read">
      <column name="READ" not-null="true" />
    </property>      
  </class>

</hibernate-mapping>

