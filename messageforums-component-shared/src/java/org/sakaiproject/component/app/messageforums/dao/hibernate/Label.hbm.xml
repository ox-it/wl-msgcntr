<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
    PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>

  <class name="org.sakaiproject.component.app.messageforums.dao.hibernate.Label"
    table="MFR_LABEL_T" optimistic-lock="version">

    <!-- Inherited fields from MutableEntity -->
    <id name="id">
      <column name="ID" not-null="true" length="19" />
      <generator class="native">
        <param name="sequence">MFR_LABEL_S</param>
      </generator>
    </id>
       
	<!--  Version number used for optimistic locking -->
    <version name="version" column="VERSION" />

    <property name="uuid" column="UUID" length="36" unique="true" not-null="true" />
    <property name="created" column="CREATED" not-null="true" />
    <property name="createdBy" column="CREATED_BY" length="36" not-null="true" />
    <property name="modified" column="MODIFIED" not-null="true" />
    <property name="modifiedBy" column="MODIFIED_BY" length="36" not-null="true" />

    <!-- Label fields -->
    <property name="key">
      <column name="KEY_C" length="255" not-null="true" />
    </property>
    <property name="value">
      <column name="VALUE_C" length="255" not-null="true" />
    </property>
  </class>

  <query name="findLabelById">
    <![CDATA[from org.sakaiproject.component.app.messageforums.dao.hibernate.Label as label where label.id = :id]]>
  </query>

  <query name="findLabelByUuid">
    <![CDATA[from org.sakaiproject.component.app.messageforums.dao.hibernate.Label as label where label.uuid = :uuid]]>
  </query>

</hibernate-mapping>