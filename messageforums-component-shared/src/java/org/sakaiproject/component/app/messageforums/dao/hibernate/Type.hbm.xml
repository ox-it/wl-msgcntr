<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
    PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>

  <class name="org.sakaiproject.component.app.messageforums.dao.hibernate.Type"
    table="MFR_TYPE_T" optimistic-lock="version">

    <!-- Inherited fields from MutableEntity -->
    <id name="id">
      <column name="ID" not-null="true" length="19" />
      <generator class="native">
        <param name="sequence">MFR_TYPE_S</param>
      </generator>
    </id>
    
 	<!--  Version number used for optimistic locking -->
    <version name="version" column="VERSION" />
       
    <property name="uuid" column="UUID" length="36" unique="true" not-null="true" />
    <property name="created" column="CREATED" not-null="true" />
    <property name="createdBy" column="CREATED_BY" length="36" not-null="true" />
    <property name="modified" column="MODIFIED" not-null="true" />
    <property name="modifiedBy" column="MODIFIED_BY" length="36" not-null="true" />

    <!-- Type fields -->
    <property name="authority">
      <column name="AUTHORITY" length="255" not-null="true" />
    </property>
    <property name="domain">
      <column name="DOMAIN" length="255" not-null="true" />
    </property>
    <property name="keyword">
      <column name="KEYWORD" length="255" not-null="true" />
    </property>
    <property name="description">
      <column name="DISCRIPTION" length="255" not-null="true" />
    </property>
    <property name="displayName">
      <column name="DISPLAY_NAME" length="255" not-null="true" />
    </property>
  </class>

  <query name="findTypeById">
    <![CDATA[from org.sakaiproject.component.app.messageforums.dao.hibernate.Type as t where t.id = :id]]>
  </query>

  <query name="findTypeByUuid">
    <![CDATA[from org.sakaiproject.component.app.messageforums.dao.hibernate.Type as t where t.uuid = :uuid]]>
  </query>

</hibernate-mapping>